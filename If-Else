print("   Welcome to Treasure Island\nYour mission is to  find the treasure")
direction=input("where do you want to go? left/right:\n").lower()
if direction=="left":
    action=input("what do you want to do? swim/wait:\n").lower()
    if action=="wait":
        door=input("which door you want to use? blue/red/yellow:\n").lower()
        if door=="yellow":
            print("YOU WIN")
        elif door=="red":
            print("Burned by fire\nGAME OVER")
        elif door=="blue":
            print("Eaten by beasts\nGAME OVER")
        else:
            print("GAME OVER")
    else:
        print("Attacked by trout\nGAME OVER")
else:
    print("Fall into hole\nGAME OVER")
        
